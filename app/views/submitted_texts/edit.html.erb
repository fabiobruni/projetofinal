<%= javascript_include_tag Ckeditor.cdn_url%>
<br>
<h1 class="formtitle"><%= @text.service_title%></h1>
<h3><%= @text.institution%></h3>
<h6><a href="<%=@text.url%>">Página do serviço no gov.br</a></h6>

<%= simple_form_for @text do |f| %>
<h5 class="formlabel">O que é?</h5>
  <%= f.input :service, label: false, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } }, value: @text.service.html_safe%>
<h5 class="formlabel">Quem pode utilizar o serviço?</h5>
  <%= f.input :target_public, label: false, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } }, value: @text.target_public.html_safe%>
<h5 class="formlabel">Etapas do Serviço</h5>
  <%= f.input :service_stages, label: false, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } }, value: @text.service_stages.html_safe%>
<h5 class="formlabel">Outras Informações</h5>
  <%= f.input :more_info, label: false, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } }, value: @text.more_info.html_safe%>
<h5 class="formlabel">Sugestões podem ser feitas até:</h5>
  <%= f.input :deadline, label: false, as: :date, html5: true, value:@text.deadline, input_html: {class: 'formcampmd'}%>
  <%= f.submit "Salvar", method: :update, class: 'btn-solicitar conforto-plus' %>
<%end%>
