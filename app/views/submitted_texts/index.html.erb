<div class="container">
  <br>
  <%if user_signed_in?%>
    <p>Olá <span style="color:#0c326f;font-weight:800"><%="#{current_user.name}"%></span>, bem vindo!</p>
  <%else%>
    <p>Olá visitante,</p>
  <%end%>
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <div id="submitted">
        <%if @submitteds != nil%>
        <div class="row">
        <% @submitteds.each do |submitted| %>
          <div class="col-3">
            <div class="card">
            <i class='fas fa-file-alt'></i>
          <h6>Sugestões até: <span style="color:#0c326f"><%= submitted.deadline.strftime("%d/%m/%Y")%></span></h6>
          <h3><%= submitted.service_title %></h3>
          <h5><%= submitted.service %></h5>
          <h6><%= link_to 'Veja o texto completo', submitted %></h6>
          <%if user_signed_in?%>
            <%if submitted.user_id == current_user.id%>
              <h6><%= link_to 'Apagar', submitted, method: :delete, data: { confirm: 'Tem certeza que quer apagar esta solicitação?' } %></h6>
            <%end%>
          <%end%>
        </div>
        </div>
          <%end%>
        <%end%>
      </div>
    </div>
    </div>
  </div>
</div>
    <div class="linkshome">
      <%= link_to 'Quero submeter um texto', new_submitted_text_path, class: "links" %>
    </div>
