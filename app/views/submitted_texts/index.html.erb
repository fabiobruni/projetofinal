<div class="bannerbra">
  <%if user_signed_in?%>
    <h1>Olá <span style="color:white;font-weight:800"><%="#{current_user.name}"%></span>, bem vindo!</h1>
  <%else%>
    <h1>Olá visitante!</h1>
  <%end%>
</div>
<div class="container">
  <br>
  <h1>Textos postados</h1>
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <div id="submitted">
        <%if @submitteds != nil%>
        <div class="row">
        <% @submitteds.each do |submitted| %>
          <div class="col-3">
            <div class="card">
            <i class='fas fa-file-alt'></i>
            <div class="cardcontent">
          <h6>Sugestões até: <span style="color:#0c326f"><%= submitted.deadline.strftime("%d/%m/%Y")%></span></h6>
          <h5><%= submitted.service_title.truncate_words(10) %></h5>
          <p><%= submitted.service.truncate_words(10).html_safe %></p>
          </div>
          <div class="cardlinks">
            <h6><%= link_to 'Veja o texto completo', submitted, class: "bluelink" %></h6>
          <%if user_signed_in?%>
            <%if submitted.user_id == current_user.id%>
              <h6><%= link_to 'Apagar o texto', submitted, method: :delete, data: { confirm: 'Tem certeza que quer apagar esta solicitação?' }, class: "redlink" %></h6>
            <%end%>
          <%end%>
        </div>
        </div>
        </div>
          <%end%>
        <%end%>
      </div>
    </div>
    </div>
  </div>
</div>
    <div class="linkshome">
      <%= link_to 'Quero submeter um texto', new_submitted_text_path, class: "links" %>
    </div>
